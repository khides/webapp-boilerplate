# Required variables
# TODO: プロジェクト名を変更
project_name = "myapp"
# TODO: 環境名を変更 (必要に応じて)
environment  = "prod"
# TODO: リージョンを変更 (必要に応じて)
aws_region   = "ap-northeast-1"

# Lambda configuration
lambda_memory_size = 512
lambda_timeout     = 30

# CORS configuration
cors_origins = ["*"]

# Custom domain configuration (optional)
# TODO: カスタムドメインを使用する場合はコメントを外して設定
